<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_bottom_nav</item>
    </style>

    <style name="ProductDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_main_blue</item>
    </style>

    <style name="LoginScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_white</item>
    </style>

    <style name="positiveButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_main_blue</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="negativeButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="title_style">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/color_bold_black_title</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="subtitle_bold_style">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/color_black_title</item>
    </style>

    <style name="subtitle_semibold_style">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/color_black_title</item>
    </style>

    <style name="subtitle_regular_style">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/color_black_title</item>
    </style>

    <style name="subtitle_gray_style">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="sell_hint_text_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="detail_title_style">
        <item name="android:text">@string/product_detail</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>

    <style name="mini_text_style">
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/color_black_title</item>
    </style>
</resources>