<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:layout_marginStart">@dimen/margin_title</item>
        <item name="android:layout_marginTop">@dimen/margin_title</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/color_bold_black_title</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

</resources>